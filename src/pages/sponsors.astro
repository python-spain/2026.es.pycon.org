<Layout title="Sponsors PyConES 2026">
  <div class="page-wrapper text-[#e5e5e5] font-sans min-h-screen w-full absolute top-0 left-0 z-10">
    <div class="container-custom max-w-[1200px] mx-auto px-4 py-8">
      <div class="text-center mb-16 pt-16">
        <span class="text-green-400 font-mono border border-green-400 px-2 py-1 rounded text-sm">
          BARCELONA 2026
        </span>
        <h1 class="text-5xl font-extrabold my-4 leading-tight">Patrocina la PyConES</h1>
        <p class="text-gray-400 text-xl max-w-[600px] mx-auto">Conecta con +800 expertos Python.</p>
      </div>

      <div class="bg-[#111] p-8 rounded-lg border border-[#333] mb-16">
        <h3 class="mb-6 font-mono text-white">> Nivel de Seniority</h3>

        <div class="flex w-full h-10 rounded-md overflow-hidden mb-4">
          <div class="w-[20%] bg-gray-700 text-gray-400 grid place-items-center text-xs font-bold">
            JR 20%
          </div>
          <div class="w-[60%] bg-green-400 text-black grid place-items-center text-sm font-bold">
            SENIOR / PRO 60%
          </div>
          <div class="w-[20%] bg-gray-700 text-gray-400 grid place-items-center text-xs font-bold">
            EXP 20%
          </div>
        </div>
        <p class="text-center text-sm text-gray-500">El 80% de la audiencia son perfiles experimentados.</p>
      </div>

      <h2 class="text-center text-3xl font-bold mb-8">Paquetes</h2>

      <div class="table-scroll overflow-x-auto pb-4 mb-12 border border-[#333] rounded-lg bg-[#0a0a0a]">
        <table class="pricing-table w-full border-collapse min-w-[900px]">
          <thead>
            <tr>
              <th class="w-[200px] p-4 text-center border-b border-white/10 align-bottom pb-6">Beneficios</th>
              {
                tiers.map((t) => (
                  <th
                    class:list={[
                      'p-4 text-center border-b border-white/10 align-bottom pb-6',
                      { 'bg-green-500/5': t.rec },
                    ]}
                  >
                    {t.rec && (
                      <div class="text-black bg-green-400 text-[0.6rem] uppercase inline-block px-1.5 py-0.5 rounded mb-1 font-bold">
                        Recomendado
                      </div>
                    )}
                    <div class="text-xl font-bold" style={`color: ${t.color}`}>
                      {t.name}
                    </div>
                    <div class="text-white text-2xl font-bold my-1">{t.price}</div>
                    <div class="text-gray-500 text-sm font-normal">{t.limit}</div>
                  </th>
                ))
              }
            </tr>
          </thead>
          <tbody>
            {
              rows.map((row) => (
                <tr>
                  <td class="p-4 text-center border-b border-white/10 text-left font-bold text-gray-400 sticky left-0 bg-[#0a0a0a] border-r border-[#333] z-10">
                    {row.label}
                  </td>
                  {row.data.map((val, i) => (
                    <td
                      class:list={[
                        'p-4 text-center border-b border-white/10',
                        { 'bg-green-500/5': tiers[i].rec, 'text-green-400': val === '‚úÖ' },
                      ]}
                    >
                      {val}
                    </td>
                  ))}
                </tr>
              ))
            }
          </tbody>
        </table>
      </div>

      <div class="text-center mt-16">
        <h3 class="text-2xl font-bold mb-8">Extras (Add-ons)</h3>
        <div class="grid grid-cols-[repeat(auto-fit,minmax(150px,1fr))] gap-4">
          {
            addons.map((add) => (
              <div class="bg-[#111] p-4 border border-[#333] rounded-md">
                <div class="font-bold">{add.t}</div>
                <div class="text-green-400">{add.p}</div>
              </div>
            ))
          }
        </div>
      </div>

      <div class="text-center mt-20 pb-16">
        <!-- <a
